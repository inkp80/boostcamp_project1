<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- id = title Viewer -->
    <TextView
        android:id="@+id/tv_id_viewer"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="25sp"
        android:background="@drawable/back"
        android:text="Todo :"
        />

    <LinearLayout
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/back">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="Time :     "/>
            <TextView
                android:id="@+id/tv_date_viewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="2017/01/01"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/tv_time_viewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="00:00"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="13dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="MON"/>
        <CheckBox
            android:id="@+id/bit_0_detail"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup_detail"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="TUE"/>
        <CheckBox
            android:id="@+id/bit_1_detail"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup_detail"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="WED"/>
        <CheckBox
            android:id="@+id/bit_2_detail"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup_detail"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="THU"/>
        <CheckBox
            android:id="@+id/bit_3_detail"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup_detail"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="FRI"/>
        <CheckBox
            android:id="@+id/bit_4_detail"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup_detail"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="SAT"/>
        <CheckBox
            android:id="@+id/bit_5_detail"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup_detail"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="SUN"/>
        <CheckBox
            android:id="@+id/bit_6_detail"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup_detail"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_location_viewer"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="23sp"
        android:background="@drawable/back"
        android:text="Location : "
        />

    <TextView
        android:id="@+id/tv_memo_viewer"
        android:paddingLeft="17dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="18sp"
        android:background="@drawable/back"
        android:text="Memo : "
        />

    <EditText
        android:paddingLeft="17dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:id="@+id/ed_comment_viewer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:drawable/edit_text"
        android:hint="Enter you comments!"/>

    <android.support.v7.widget.SwitchCompat
        android:padding="10dp"
        android:layout_gravity="bottom|right"
        android:id="@+id/detail_set_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:hint="Remind me! or.. not"/>
</LinearLayout>