<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:textSize="18sp"
        android:id="@+id/add_title"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your task title"/>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="5dp"
            android:id="@+id/add_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:onClick="mOnClick"
            android:text="0000/00/00"
            android:background="#FFFFFFFF"/>
        <View
            android:layout_width="1dip"
            android:layout_height="50dp"
            android:background="#000000"
            />
        <TextView
            android:padding="5dp"
            android:id="@+id/add_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="00:00"
            android:background="#FFFFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/checkbox_parent"
        android:layout_marginLeft="13dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="SUN"/>
        <CheckBox
            android:id="@+id/bit_1"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="MON"/>
        <CheckBox
            android:id="@+id/bit_0"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="TUE"/>
        <CheckBox
            android:id="@+id/bit_2"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="WED"/>
        <CheckBox
            android:id="@+id/bit_3"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="THU"/>
        <CheckBox
            android:id="@+id/bit_4"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="FRI"/>
        <CheckBox
            android:id="@+id/bit_5"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#000000"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:text="SAT"/>
        <CheckBox
            android:id="@+id/bit_6"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedBox_Setup"
            />

    </LinearLayout>


    <TextView
        android:padding="5dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/add_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Seoul, Korea"/>

    <EditText
        android:id="@+id/add_memo"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp"
        android:gravity="top"
        android:background="@android:drawable/edit_text"
        android:backgroundTintMode="@android:color/white"
        android:hint="Enter your task here"/>

    <LinearLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/bt_add_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:hint="Remind me!"/>

        <Button
            android:id="@+id/bt_ParsingData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:onClick="onClickAddTask"
            />

    </LinearLayout>


</LinearLayout>